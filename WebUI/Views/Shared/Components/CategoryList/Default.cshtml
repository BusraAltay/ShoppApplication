@model CategoryListViewModel


<div class="list-group card">
    <div class="text-center card-header">
        <h3>Kategoriler</h3>
    </div>
    @foreach (var item in Model.Categories)
    {
        <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Name.ToLower()" class="list-group-item list-group-item-action @(Model.SelectedCategory == item.Name.ToLower() ? "active":"")">@item.Name</a>
    }
</div>

