@model Product

<div class="col-md-4">
    <div class="card image mb-3">
        <div class="card-header text-center" style="background-color:Highlight">
            <h4 class="card-title" style="color:white">
                <a>@Model.Name</a>
            </h4>
        </div>
        <img src="/image/@Model.ImageUrl" alt="@Model.Name" style="height:215px" />
        <div class="card-body">

            <small class="text-muted">
                <i class="fas fa-lira-sign">@Model.UnitPrice</i>
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">Detay</a>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-outline-primary">Sepete Ekle</button>
                </form>
            }

        </div>
    </div>
</div>