@model CartModel
@{
    ViewData["Title"] = "Index";
}

<h1>Sepetim</h1>
<hr />
<div class="row mt-5">
    <div class="col-md-8">
        @*<div class="text-left">
            <h4>Cart Items</h4>
        </div>*@

        @if (Model.CartItem.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ürün İsmi</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam Fiyat</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItem)
                    {
                        <tr>
                            <td>
                                <img src="~/image/@item.ImageUrl" width="80" height="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Quantity * item.Price).ToString("c"))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-warning text-center">
                Sepetinizde ürün bulunmamaktadır.
            </div>
            <div class="text-center">
                <div class="text-center" style="font-size:large"> Biraz gezinmeye ne dersin.</div>
                <div class="text-center" style="font-size:large"> Beğeneceğin ürünler olduğuna eminiz :)</div>
                <br />
                <a href="/" class="btn btn-primary col-md-3" style="width:150px">Alışverişe Başla</a>
            </div>
        }
    </div>
    <div class="col-md-4">

        @if (Model.CartItem.Count > 0)
        {
            <div class="text-left">
                <h4>Sipariş Özeti</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Toplam Tutar</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Kargo</th>
                        <td>Ücretsiz</td>
                    </tr>
                    @*<tr>
                        <th>Order Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>*@
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i> Alışverişe Devam Et
                </a>
                <a href="/checkout" class="btn btn-primary">
                    Ödeme Yap <i class="fa fa-arrow-circle-right fa-fw"></i>
                </a>
            </div>

        }
    </div>
</div>